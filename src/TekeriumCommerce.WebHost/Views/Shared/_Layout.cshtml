@using System.Globalization;

@{ ViewData["widthRequestUrl"] = "/search/select"; }

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(to right, #3FB6A8, #7ED386);
        }

        .header-container {
            background: #FFFFFF;
            width: 80%;
            height: 120px;
            margin: 0 auto;
            position: relative;
            box-shadow: 2px 5px 2 0px rgba(119, 119, 119, 0.5);
        }

        .flexbox-con {
            display: flex;
            align-items: center;
        }

        .logo {
            text-decoration: none;
            color: white;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 3px;
            padding: 10px;
        }

        .flexbox-cart {
            margin-left: auto;
        }
    </style>

    <link teker-append-version="true" rel="stylesheet" href="~/lib/bootstrap4/css/bootstrap.css" />
    <link teker-append-version="true" rel="stylesheet" href="~/modules/core/site.css" />

    @RenderSection("head", false)
</head>

<body>
<div class="header-container">
    <div class="flexbox-con">
        <div class="logo">
            <a href="~/"><img style="max-height: -webkit-fill-available" src="~/tekerium.jpg" alt="Tekerium" /></a>
        </div>
        @*<partial name="_LoginPartial"/>*@
        
        <div class="flexbox-cart">
            @await Component.InvokeAsync("CartBadge")
        </div>
    </div>
</div>

    <div class="container">
        @RenderBody()
    </div>

    <div class="footer-content">

    </div>

    <div id="shopModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>

    <!-- scripts section -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script simpl-append-version="true" src="~/lib/bootstrap4/js/bootstrap.js"></script>
    <script simpl-append-version="true" src="~/modules/shoppingcart/add-to-cart.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>