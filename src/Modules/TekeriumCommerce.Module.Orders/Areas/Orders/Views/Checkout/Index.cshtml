@model TekeriumCommerce.Module.Orders.Areas.Orders.ViewModels.OrderInformationVm

@{
    ViewBag.Title = "Order Information";
}

<section class="finder">
    <div class="container">
        <div class="row d-flex justify-content-center brand">
            <div class="col-xs-12 col-md-8 checkout-form">
                <form asp-area="Orders" asp-controller="Checkout" asp-action="Index" method="post">
                    <div class="card">
                        <div class="card-header p-0">
                            <div class="bg-secondary text-white text-center py-2">
                                <h3>
                                    <i class="fas fa-truck"></i> Shipping details
                                </h3>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fa fa-user text-secondary"></i>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" asp-for="Name" placeholder="Name" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fa fa-envelope text-secondary"></i>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" asp-for="Email" placeholder="Email" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fa fa-map-marker-alt text-secondary"></i>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" name="name" placeholder="Address" required>
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fa fa-phone-square text-secondary"></i>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" asp-for="Phone" placeholder="Phone number" required>
                                    <span asp-validation-for="Phone" class="text-danger"></span>

                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fa fa-comment text-secondary"></i>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" asp-for="OrderNote" placeholder="Enter order note">
                                </div>
                            </div>
                            
                            <div class="text-center">
                                <input type="submit" value="Confirm" class="btn btn-success btn-block rounded-0 py-2">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>