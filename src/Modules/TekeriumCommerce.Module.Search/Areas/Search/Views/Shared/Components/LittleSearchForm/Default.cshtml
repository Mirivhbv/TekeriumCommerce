@model TekeriumCommerce.Module.Search.Areas.Search.ViewModels.LittleSearchForm

<div class="params search col col-lg-11 col-sm-12">
    @*todo: wtf is this form?*@
    <form class="mt-8">
        <div class="col-lg-12">
            <div class="row d-flex justify-content-sm-start">
                <form class="mt-4" action="~/search" method="post">
                    <input type="hidden" name="category" value="@Model.Category" />
                    <div class="col-lg-12">
                        <label class="sr-only" for="inlineFormInputGroup">
                            Width
                        </label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="searchsizing input-group-text">
                                    WIDTH
                                </div>
                            </div>
                            <select asp-for="Width" asp-items="Model.AvailableWidths" class="form-control">
                                <option value="choose">Choose</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <label class="sr-only" for="inlineFormInputGroup">
                            Profile
                        </label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="searchsizing input-group-text">
                                    PROFILE
                                </div>
                            </div>
                            <select asp-for="Profile" asp-items="Model.AvailableProfiles" class="form-control">
                                <option value="choose">Choose</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <label class="sr-only" for="inlineFormInputGroup">
                            Rim size
                        </label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="searchsizing input-group-text">
                                    RIM
                                </div>
                            </div>
                            <select asp-for="RimSize" asp-items="Model.AvailableRimSizes" class="form-control">
                                <option value="choose">Choose</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <label class="sr-only" for="inlineFormInputGroup">
                            Season
                        </label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="searchsizing input-group-text">
                                    SEASON
                                </div>
                            </div>
                            <select asp-for="ProductSeason" class="form-control">
                                <option value="all">All</option>
                                <option value="summer">Summer</option>
                                <option value="winter">Winter</option>
                                <option value="universal">Universal</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-secondary btn-block">
                        Search
                    </button>
                </form>
            </div>
        </div>
    </form>
</div>