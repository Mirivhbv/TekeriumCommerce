@model TekeriumCommerce.Module.Search.Areas.Search.ViewModels.SearchForm

<div class="container">
    <div class="row">
        <div class="col-12 col-md-1 types px-0">
            <ul id="types" class="p-0">
                @if (Model.CarActive.HasValue && Model.CarActive.Value)
                {
                    <li class="active"><i class="fas fa-car"></i></li>
                }
                @if (Model.LCVActive.HasValue && Model.LCVActive.Value)
                {
                    <li><i class="fas fa-truck"></i></li>
                }
                @if (Model.TruckActive.HasValue && Model.TruckActive.Value)
                {
                    <li><i class="fas fa-bus"></i></li>

                }
                @if (Model.TractorActive.HasValue && Model.TractorActive.Value)
                {
                    <li><i class="fas fa-tractor"></i></li>
                }
            </ul>
        </div>
        <div class="col search">
            <ul id="typesContent">
                @if (Model.CarActive.HasValue && Model.CarActive.Value)
                {
                    <li class="active">
                        <div class="container">
                            <div class="row">
                                <div class="col">
                                    <h3>@Localizer["Car"]</h3>
                                </div>
                            </div>
                            <form class="mt-4" method="get" action="~/search">
                                <input type="hidden" name="category" value="Car" />
                                <div class="row">
                                    <div class="col-12 col-sm">
                                        <label class="sr-only" for="width">Width</label>
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    @Localizer["Width"].Value.ToUpper()
                                                </div>
                                            </div>
                                            <select name="width" asp-for="Width" asp-items="Model.AvailableWidths" class="form-control">
                                                <option value="choose">@Localizer["Choose"]</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-12 col-sm">
                                        <label class="sr-only" for="inlineFormInputGroup">Profile</label>
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    @Localizer["Profile"].Value.ToUpper()
                                                </div>
                                            </div>
                                            <select name="profile" asp-for="Profile" asp-items="Model.AvailableProfiles" class="form-control">
                                                <option value="choose">@Localizer["Choose"]</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm">
                                        <label class="sr-only" for="inlineFormInputGroup">Rim size</label>
                                        <div class="input-group mb-2">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    @Localizer["Rim"].Value.ToUpper()
                                                </div>
                                            </div>
                                            <select name="rimSize" asp-for="RimSize" asp-items="Model.AvailableRimSizes" class="form-control">
                                                <option value="choose">@Localizer["Choose"]</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-12 col-sm order-12 order-sm-1">
                                        <h4>@Localizer["Season"]:</h4>
                                        <div class="btn-group btn-group-toggle mt-4" data-toggle="buttons">
                                            <label class="btn btn-secondary active">
                                                <input type="radio" asp-for="@Model.ProductSeason" value="all" autocomplete="off" checked />
                                                @Localizer["All"]
                                            </label>
                                            <label class="btn btn-secondary">
                                                <input type="radio" asp-for="@Model.ProductSeason" value="summer" autocomplete="off" />
                                                @Localizer["Summer"]
                                            </label>
                                            <label class="btn btn-secondary">
                                                <input type="radio" asp-for="@Model.ProductSeason" value="winter" autocomplete="off" />
                                                @Localizer["Winter"]
                                            </label>
                                            <label class="btn btn-secondary">
                                                <input type="radio" asp-for="@Model.ProductSeason" value="universal" autocomplete="off" />
                                                @Localizer["Universal"]
                                            </label>
                                        </div>
                                        <br /><br />
                                        <button type="submit" class="btn btn-outline-secondary btn-block">
                                            @Localizer["Search"]
                                        </button>
                                    </div>
                                    <div class="col-12 col-sm order-1 order-sm-12 mb-4 mb-sm-0">
                                        <img src="assets/images/tyre-pattern.svg" alt="tyre" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </li>
                }

                @if (Model.LCVActive.HasValue && Model.LCVActive.Value)
                {
                    <li>Light Commercial Vehicle</li>
                }

                @if (Model.TruckActive.HasValue && Model.TruckActive.Value)
                {
                    <li>Truck</li>
                }

                @if (Model.TractorActive.HasValue && Model.TractorActive.Value)
                {
                    <li>Tractor</li>
                }
            </ul>
        </div>
    </div>
</div>
